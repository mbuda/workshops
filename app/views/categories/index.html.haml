= content_for :title, 'List of categories'

.panel.panel-default
  .panel-heading
    %h4 Listing categories
  .panel-body
    .row
      .col-md-12.col-sm-12
        %table.table.table-striped
          %thead
            %tr
              %th.col-md-8.col-xs-8 Name
              %th.col-md-4.col-xs-4 Actions
          %tbody
            - categories.each do |category|
              %tr
                %td= link_to category.name, category
                %td
                  - if current_user && current_user.admin == true
                    = link_to 'Edit', edit_category_path(category), class: 'btn btn-info'
                    = link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
                  - else
                    None for you

%br

#categories-actions
  - if current_user && current_user.admin == true
    = link_to 'New Category', new_category_path, class: 'btn btn-success'
