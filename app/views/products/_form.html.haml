= form_for [category, product] do |f|
  - if product.errors.any?
    #error_explanation
      %h2= "#{pluralize(product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - product.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :title, class: 'col-md-6 col-xs-6 control-label'
    = f.text_field :title, required: true, class: 'form-control'
  .form-group
    = f.label :description, class: 'col-md-6 col-xs-6 control-label'
    = f.text_area :description, required: true, class: 'form-control'
  .form-group
    = f.label :price, class: 'col-md-6 col-xs-6 control-label'
    = f.text_field :price, required: true, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-success'
