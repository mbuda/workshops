.col-md-12
  .panel.panel-default
    .panel-heading
      %h4 Change your password
    .panel-body
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = f.error_notification

        .form-group
          = f.label :reser_password_token, class: 'col-md-6 col-xs-6 control-label'
          .col-md-6.col-xs-6
            = f.text_field :reset_password_token, as: :hidden, class: 'form-control'
            = f.full_error :reset_password_token

        .form-group
          = f.label 'New password', class: 'col-md-6 col-xs-6 control-label'
            .col-md-6.col-xs-6
              = f.text_field :password, required: true, autofocus: true, class: 'form-control'
          = f.label 'Confirm password', class: 'col-md-6 col-xs-6 control-label'
            .col-md-6.col-xs-6
              = f.text_field :password_confirmation, label: "Confirm your new password", required: true, class: 'form-control'

        .form-actions
          = f.button :submit, "Change my password", class: 'btn btn-success'

= render "users/shared/links"
