.col-md-12
  .panel.panel-default
    .panel-heading
      %h4 Forgot your password?
    .panel-body
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = f.error_notification

        .form-group
          = f.label :email, class: 'col-md-6 col-xs-6 control-label'
          .col-md-6.col-xs-6
            = f.text_field :email, required: true, autofocus: true, class: 'form-control'
            .form-actions
              = f.button :submit, "Send me reset password instructions", class: 'btn btn-info'

.col-md-6.col-xs-6
  = render "users/shared/links"
