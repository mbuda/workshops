.col-md-12
  .panel.panel-default
    .panel-heading
    %h2 Edit
      = resource_name.to_s.humanize
    .panel-body
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        - if @user.errors.any?
          .alert.alert-danger
            %h4= f.error_notification
            %ul
              - @user.errors.full_messages.each do |msg|
                %li= msg

        .form-group
          = f.label :email, class: 'col-md-6 control-label'
          .col-md-4
            = f.text_field :email, required: true, autofocus: true, class: 'form-control'

        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %p Currently waiting confirmation for:
              = resource.unconfirmed_email

        .form-group
          = f.label :firstname, class: 'col-md-6 control-label'
          .col-md-4
            = f.text_field :firstname, class: 'form-control'
        .form-group
          = f.label :lastname, class: 'col-md-6 control-label'
          .col-md-4
            = f.text_field :lastname, class: 'form-control'
        .form-group
          = f.label :password, class: 'col-md-6 control-label'
          .col-md-4
            = f.text_field :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, class: 'form-control'
        .form-group
          = f.label :password_confirmation, class: 'col-md-6 control-label'
          .col-md-4
            = f.text_field :password_confirmation, required: false, class: 'form-control'
        .form-group
          = f.label :current_password, class: 'col-md-6 control-label'
          .col-md-4
            = f.text_field :current_password, hint: "we need your current password to confirm your changes", required: true

        .form-actions
          = f.button :submit, "Update", class: 'btn btn-primary'

%h3 Cancel my account

%p Unhappy?
= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'

= link_to "Back", :back, class: 'btn btn-info'
