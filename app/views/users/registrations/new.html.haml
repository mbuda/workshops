.col-md-12
  .panel.panel-default
    .panel-heading
      %h2 Sign up
    .panel-body
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        - if @user.errors.any?
          .alert.alert-danger
            %h4= f.error_notification
            %ul
              - @user.errors.full_messages.each do |msg|
                %li= msg

        .form-group
          = f.label :firstname, class: 'col-md-6 control-label'
          .col-md-4
            = f.text_field :firstname, required: true, class: 'form-control'
        .form-group
          = f.label :lastname, class: 'col-md-6 control-label'
          .col-md-4
            = f.text_field :lastname, required: true, class: 'form-control'
        .form-group
          = f.label :email, class: 'col-md-6 control-label'
          .col-md-4
            = f.text_field :email, required: true, autofocus: true, class: 'form-control'
        .form-group
          = f.label :password, class: 'col-md-6 control-label'
          .col-md-4
            = f.text_field :password, required: true, class: 'form-control'
        .form-group
          = f.label :password_confirmation, class: 'col-md-6 control-label'
          .col-md-4
            = f.text_field :password_confirmation, required: true, class: 'form-control'

        .form-actions
          = f.button :submit, "Sign up", class: 'btn btn-primary'

.col-md-6
  = render "users/shared/links"
