.col-md-12
  .panel.panel-default
    .panel-heading
      %h2 Sign in
    .panel-body
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

        .form-group
          = f.label :email, class: 'col-md-6 col-xs-6 control-label'
          .col-md-4.col-xs-6
          = f.text_field :email, required: false, autofocus: true, class: 'form-control'
        .form-group
          = f.label :password, class: 'col-md-6 col-xs-6'
          .col-md-4.col-xs-6
          = f.text_field :password, required: false, class: 'form-control'
        .form-group
          = f.check_box :remember_me, as: :boolean if devise_mapping.rememberable?
          = f.label :remember_me
        .form-actions
          = f.button :submit, "Sign in", class: 'btn btn-primary'

.col-md-6.col-xs-6
  = render "users/shared/links"
